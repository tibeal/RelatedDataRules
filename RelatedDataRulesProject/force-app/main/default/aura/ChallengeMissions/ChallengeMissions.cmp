<aura:component controller="ChallengeViewCtrl">
    <aura:attribute type="sObject" name="record" />
    <aura:attribute type="Object" name="missions" />

    <!-- attributes -->
    <aura:attribute name="data" type="Object"/>
    <aura:attribute name="columns" type="List"/>
    <aura:attribute name="selectedRowsCount" type="Integer" default="0"/>
    <aura:attribute name="maxRowSelection" type="Integer" default="1"/>

    <!-- handlers-->
    <aura:handler name="init" value="{! this }" action="{! c.doInit }"/>

    <!-- events -->
    <aura:registerEvent name="selectMission" type="c:SelectMission"/>

    <!-- the container element determine the height of the datatable -->
    <div class="missions-container">
        <div class="page-section page-header">
            <h3 class="slds-text-heading_small slds-p-bottom_medium slds-p-left_medium slds-p-top_medium"><b>Missions</b></h3>
        </div>
        <lightning:layout class="slds-page-header slds-page-header_object-home slds-border_bottom">
                <lightning:layoutItem>
                    <lightning:datatable
                        columns="{! v.columns }"
                        data="{! v.data }"
                        keyField="Id"
                        maxRowSelection="{! v.maxRowSelection }"
                        onrowselection="{! c.updateSelectedMission }"/>
                </lightning:layoutItem>
        </lightning:layout>
    </div>
</aura:component>