<aura:component controller="ChallengeViewCtrl">
    <!-- component: attributes -->
    <aura:attribute type="sObject" name="mission"/>
    <aura:attribute type="Object" name="criteria"/>

    <!-- dataTable: attributes -->
    <aura:attribute name="data" type="Object"/>
    <aura:attribute name="columns" type="List"/>
    <aura:attribute name="maxRowSelection" type="Integer" default="0"/>

    <!-- handlers-->
    <aura:handler name="init" value="{! this }" action="{! c.doInit }"/>

    <aura:if isTrue="{!v.mission.Id != undefined}">
        
        <div class="criteria-container">
            <div class="page-section page-header">
                <h3 class="slds-text-heading_small slds-p-bottom_medium slds-p-left_medium slds-p-top_medium"><b>{!v.mission.Name} Criteria</b></h3>
            </div>
            <lightning:layout class="slds-page-header slds-page-header_object-home slds-border_bottom">
                    <lightning:layoutItem>
                        <lightning:datatable
                            columns="{! v.columns }"
                            data="{! v.data }"
                            keyField="Id"
                            maxRowSelection="{! v.maxRowSelection }"
                            hideCheckboxColumn="true" />
                    </lightning:layoutItem>
            </lightning:layout>
            <div class="slds-p-horizontal_small">
    
                <div class="missionproperty">
                    <span class="label">Matching Criteria:</span>
                    <span>{!v.mission.FieloPLT__LogicalExpression__c}</span>
                </div>

            </div>
        </div>
    </aura:if>
</aura:component>	
