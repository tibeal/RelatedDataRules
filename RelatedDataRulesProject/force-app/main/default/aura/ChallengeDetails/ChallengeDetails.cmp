<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId" controller="ChallengeViewCtrl"> <!--inherit recordId attribute-->
    
    <aura:attribute name="record" type="sObject" 
      description="The record object to be displayed"/>
    <aura:attribute name="simpleRecord" type="Object" 
      description="A simplified view record object to be displayed"/>
    <aura:attribute name="recordError" type="String" 
      description="An error message bound to force:recordData"/>
    
    <aura:attribute type="Object" name="fieldLabels"/>
    
    <aura:handler name="init" action="{!c.doInit}" value="{!this}" />
    
    <!-- Display a lightning card with details about the record -->
    <div class="record-details"> 
        <aura:if isTrue="{!v.record.Id != undefined}">
            <lightning:card iconName="action:goal">
                <aura:set attribute="title">
                    {!v.record.Name}
                </aura:set>
                <lightning:layout horizontalAlign='spread' verticalAlign='start' multipleRows="true">
                    <lightning:layoutItem padding="around-small">
                        
                        <div class="slds-p-horizontal_small">
    
                            <div class="challengeproperty">
                                <span class="label">{!v.fieldLabels.FieloPLT__AcomplishAction__c}:</span>
                                <span>{!v.record.FieloPLT__AcomplishAction__c}</span>
                            </div>
    
                            <div class="challengeproperty">
                                <span class="label">{!v.fieldLabels.FieloPLT__Subscription__c}:</span>
                                <span>{!v.record.FieloPLT__Subscription__c}</span>
                            </div>
    
                            <div class="challengeproperty">
                                <span class="label">{!v.fieldLabels.FieloPLT__StartDate__c}:</span>
                                <span>{!v.record.FieloPLT__StartDate__c}</span>
                            </div>
    
                            <div class="challengeproperty">
                                <span class="label">{!v.fieldLabels.FieloPLT__EndDate__c}:</span>
                                <span>{!v.record.FieloPLT__EndDate__c}</span>
                            </div>
    
                            <div class="challengeproperty">
                                <span class="label">{!v.fieldLabels.FieloPLT__TableType__c}:</span>
                                <span>{!v.record.FieloPLT__TableType__c}</span>
                            </div>
    
                        </div>
    
                    </lightning:layoutItem>
                </lightning:layout>
            </lightning:card>
        </aura:if>
    </div>
    
    <!-- Display Lightning Data Service errors, if any -->
    <aura:if isTrue="{!not(empty(v.recordError))}">
        <div class="recordError">{!v.recordError}</div>
    </aura:if>
</aura:component>